<assembly>
    <id>releases</id>
    <formats>
        <!--指定打包格式-->
        <format>tar</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <!--自定义的启动项目的脚本文件-->
            <directory>src/main/resources/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <!--指定要包含的文件名称-->
                <include>service.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <!--指定配置文件的位置、要包含的配置文件和配置文件输出目录-->
            <directory>src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
                <include>*.yml</include>
                <include>env/dev/*</include>
                <include>env/ei/*</include>
                <include>env/prod/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <!--指定数据库脚本文件的以及输出目录-->
            <directory>src/main/db</directory>
            <outputDirectory>db</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
        </fileSet>
        <fileSet>
            <!--指定jar包和输出位置-->
            <directory>target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <!--指定日志文件和输出位置-->
            <directory>src/main/resources</directory>
            <outputDirectory>logs</outputDirectory>
            <fileMode>0755</fileMode>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>